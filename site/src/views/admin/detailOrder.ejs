                    <td><%= product.name %></td>
                    <td>
                      <% const orderProduct = product.orderProducts; %>
                      <% if (orderProduct) { %>
                        <%= orderProduct.quantity %>
                      <% } else { %>
                        0
                      <% } %>
                    </td>
                    <td><%= product.price.toLocaleString('es-AR', { style: 'currency', currency: 'ARS' }) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
