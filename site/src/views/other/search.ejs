<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head", {title: "Inicio" }) %>


    <body class="home-body">
        <%- include("../partials/header") %>
            <main class="home-main">
                <h5>Resultados de tu busqueda:</h5>
                <section class="section-products">
                    <% products.forEach(product=> { %>
                        <div class="product-card">
                            <div class="product-image">
                                <img src="/images/products/<%= product.image%>" alt="<%= product.name%>">
                            </div>
                            <div class="product-details">
                                <h3 class="product-title"><%= product.name%></h3>
                                <p class="product-description"><%= product.description %></p>
                                <div class="product-price">
                                    <span class="price">$<%= product.price %></span>
                                    <span class="discount">$9999.99</span>
                                </div>
                                <div class="prwoduct-actions">
                                    <a href="/productos/detalle/<%= product.id%>" class="view-product">Ver Producto</a>
                                    <a href="/productos/detalle/<%= product.id%>" class="add-to-cart">Agregar al carrito</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </section>
            </main>

            <%- include("../partials/footer") %>
                <%- include("../partials/scripts") %>
    </body>

</html>