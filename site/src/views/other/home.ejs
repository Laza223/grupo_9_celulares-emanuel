<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head", {title: "Inicio" }) %>

    <body class="home-body">
        <%- include("../partials/header") %>
            <main class="home-main">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <ol class="carousel-indicators">
                      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                      <li data-target="#myCarousel" data-slide-to="1"></li>
                    </ol>
                  

                    <div class="carousel-inner">
                      <div class="item active">
                        <img src="/images/banner1.jpg" width="100%" alt="Banner 1">
                      </div>
                  
                      <div class="item">
                        <img src="/images/banner2.jpg" width="100%" alt="Banner 2">
                      </div>
                    </div>
                  
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                      <span class="glyphicon glyphicon-chevron-left"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                      <span class="glyphicon glyphicon-chevron-right"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>

                <section class="section-products">
                    <% products.forEach(product=> { %>
                    <div class="product-card">
                        <div class="product-image">
                            <img src="/images/products/<%= product.image%>" alt="<%= product.name%>">
                        </div>
                        <div class="product-details">
                            <h3 class="product-title"><%= product.name%></h3>
                            <p class="product-description"><%= product.description %></p>
                            <div class="product-price">
                                <span class="price">$<%= product.price %></span>
                                <span class="discount">$9999.99</span>
                            </div>
                            <div class="product-actions">
                                <a href="/productos/detalle/<%= product.id%>" class="view-product">Ver Producto</a>
                                <a href="/productos/detalle/<%= product.id%>" class="add-to-cart">Agregar al carrito</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </section>
            </main>

            <% if (locals.userLogin?.roleAdmin===true) { %>
                <a href="/admin/dashboard/productos" class="access-dashboard"><i class="fa-solid fa-user-gear"></i></a>
                <% } else{ %>
                    <a href="https://www.whatsapp.com/" target="_blank" >
                    <div class="whatsapp-icon-fixed">
                        <i class="fa-brands fa-whatsapp"></i>
                        <div class="chat-bubble">Â¿Quieres contactarte con nosotros?</div>
                    </div>
                </a>
                    <% } %>

                        <%- include("../partials/footer") %>
                            <%- include("../partials/scripts") %>
                                <script src="./js/togglePassword.js"></script>
                                <script src="./js/productCard.js"></script>
    </body>

</html>