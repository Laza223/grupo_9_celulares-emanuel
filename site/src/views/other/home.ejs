<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head", {title: "Inicio" }) %>

    <body class="home-body">
        <%- include("../partials/header") %>
            <main class="home-main">

                <div class="carusel-box">

                    <div id="carouselExample" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/banner1.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/banner2.jpg" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <div class="div-anuncios">
                        <div class="img-tip"> <img src="/images/tips.png" alt="Tips"></div>
                        <div class="caja-gris"></div>

                    </div>
                </div>

                <div class="div-offers">
                    <h5>¡OFERTAS DE LA SEMANA DE LA LIMPIEZA!</h5>
                </div>
                <section class="section-products">
                    <% products.forEach(product=> { %>
                    <div class="product-card">
                        <div class="product-image">
                            <img src="/images/products/<%= product.image%>" alt="<%= product.name%>">
                        </div>
                        <div class="product-details">
                            <h3 class="product-title"><%= product.name%></h3>
                            <p class="product-description"><%= product.description %></p>
                            <div class="product-price">
                                <span class="price">$<%= product.price %></span>
                                <span class="discount">$9999.99</span>
                            </div>
                            <div class="product-actions">
                                <a href="/productos/detalle/<%= product.id%>" class="view-product">Ver Producto</a>
                                <a href="/productos/detalle/<%= product.id%>" class="add-to-cart">Agregar al carrito</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </section>
            </main>

            <% if (locals.userLogin?.roleAdmin===true) { %>
                <a href="/admin/dashboard/productos" class="access-dashboard"><i class="fa-solid fa-user-gear"></i></a>
                <% } else{ %>
                    <a href="https://www.whatsapp.com/" target="_blank" >
                    <div class="whatsapp-icon-fixed">
                        <i class="fa-brands fa-whatsapp"></i>
                        <div class="chat-bubble">¿Quieres contactarte con nosotros?</div>
                    </div>
                </a>
                    <% } %>

                        <%- include("../partials/footer") %>
                            <%- include("../partials/scripts") %>
                                <script src="./js/togglePassword.js"></script>
                                <script src="./js/productCard.js"></script>
    </body>

</html>